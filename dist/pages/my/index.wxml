
  <view class="container">
    <view class="zan-row zan-center" style="padding-top:60rpx;">
      <navigator url="/pages/my/info">
        <image class="userinfo-avatar" src="{{userInfo.headImg}}" background-size="cover"/>
        <text class="zan-col zan-col-24">{{userInfo.name}}</text>
      </navigator>
    </view>
    <view class="zan-panel">
      <view class="zan-cell" bindtap="_into" data-wpy_into-a="/pages/my/pay">
        <view class="zan-cell__bd">我的会员</view>
      </view>
      <view  wx:if="userInfo.refund" class="zan-cell" bindtap="_refund">
        <view class="zan-cell__bd">申请退款</view>
      </view>
    </view>
  </view>