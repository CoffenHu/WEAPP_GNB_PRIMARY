
  <view class="container">
    <view class="zan-row zan-center" style="padding-top:60rpx;position: relative">
      <navigator url="/pages/my/info" hover-class="none">
        <image class="userinfo-avatar" src="{{userInfo.headImg}}" background-size="cover"/>
        <image  wx:if="{{ userInfo.vip != 0 }}" class="userinfo-vip" src="../../common/resources/vip.png" background-size="cover"/>
        <text class="zan-col zan-col-24 zan-font-22">{{userInfo.name}}</text>
        <text class="zan-arrow"/>
      </navigator>
    </view>
    <view class="zan-panel">
      <view class="zan-cell" bindtap="_into" data-wpy_into-a="/pages/my/pay">
        <view class="zan-cell__bd">我的会员</view>
      </view>
      <view  wx:if="userInfo.refund" class="zan-cell" bindtap="_refund">
        <view class="zan-cell__bd">申请退款</view>
      </view>
    </view>
  </view>