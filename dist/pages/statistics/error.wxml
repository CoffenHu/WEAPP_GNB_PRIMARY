
  <view class="container">
    
  <scroll-view scroll-y enable-back-to-topx="enable-back-to-topx" style="height: {{$InfiniteScroll$height}}" lower-threshold="{{$InfiniteScroll$scrollDistance}}" bindscrolltolower="$InfiniteScroll$scrolltoupper">
    
      <block wx:for="{{error}}" wx:for-index="index" wx:for-item="item" wx:key="index">
        <view class="zan-panel">
          <view class="zan-cell" style="padding: 5px 0" bindtap="_preview" data-wpy_preview-a="{{item.errorImg.url}}">
            <image mode="aspectFit" style="width:100%;height:{{ item.errorImg.height/4 }}px" src="{{item.errorImg.url}}?mageMogr2/auto-orient/thumbnail/750x/format/jpg/interlace/1/blur/1x0/quality/100|imageslim" lazy-load="true"/>
          </view>
          <view class="zan-cell zan-font-12" style="padding: 7px 15px">
            <view class="zan-cell__bd" style="color: #3fc6c6">{{item.workbookName}}</view>
          </view>
        </view>
      </block>
    
    <view class="loading_cell mb30"  wx:if="{{!$InfiniteScroll$isOnPullDownRefresh && $InfiniteScroll$scrollDisabled && !$InfiniteScroll$isNothing}}">
      <view class="lds-rolling"/>
    </view>
    <view class="nothing"  wx:if="{{$InfiniteScroll$scrollDisabled && $InfiniteScroll$isNothing}}">
      <view class="line"/>
      <text>到底了</text>
      <view class="line"/>
    </view>
  </scroll-view>

  </view>