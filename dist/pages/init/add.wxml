                <block class="_89da6de" wx:for="{{item.version}}" wx:for-index="index" wx:for-item="version" wx:key="index">
                  <view class="zan-card__left-col zan-c-gray zan-font-14 _89da6de" style="margin-bottom: 5px;">{{version}}</view>
